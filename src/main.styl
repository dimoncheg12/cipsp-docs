.saas-documentation
  font-size 14px
  line-height 21px
  color $black
  width 100%
  img
    height auto !important
    width auto !important
  .content-docs
    width 95%
  h3
    font-size 21px
    color #666
    font-weight 300
    margin 0 0 32px
  h4
    font-size 18px
    font-weight 500
    color $black
    margin 30px 0 10px
  pre
    width 100%
    margin 0 0 20px
    &.code
      border-top 1px solid #c8cacc
      padding 10px 8px
      background-color #fafafa
      border-bottom 1px solid #c8cacc
    b
      font-weight 700
    u
      text-decoration none
      color #db4139
    s
      text-decoration none
      color $primary
  .docs-optional-hide
    .docs-optional
      display none
  .page-name
    font-size 28px
    margin 0 0 20px
  .list-api
    font-size 16px
    color $black
    margin-bottom 50px
    li
      margin 0 0 15px
      a
        color $primary
        margin-left 5px
        text-decoration underline
    ul
      li
        margin 3px 0
  ol
    font-size 16px
    color $black
    margin-bottom 30px
    li
      margin 0 0 5px
      a
        color $primary
        margin-left 5px
        text-decoration underline
    ol
      li
        margin 3px 0
  #checkout_wrapper
    min-height 480px
  code
    &.url
      padding 9px 9px 10px 8px
  .hljs
    padding 0 8px 10px
  .hljs-subst
    color #444
  .hljs-comment
    color #888
  .hljs-literal
    color $secondary
  .hljs-meta
    color #1f7199
  .hljs-meta-string
    color #4d99bf
  .hljs-emphasis
    font-style italic
  .hljs-strong
    font-weight 700

  .list-api ul, ol ol
    padding 2px 0 0 44px

  .hljs, code.url
    display block
    overflow-x auto
    border-top 1px solid #c8cacc
    background-color #fafafa
    border-bottom 1px solid #c8cacc
    color #444

  .hljs-attribute, .hljs-doctag, .hljs-keyword, .hljs-meta-keyword, .hljs-name, .hljs-selector-tag
    font-weight 700

  .hljs-deletion, .hljs-number, .hljs-quote, .hljs-selector-class, .hljs-selector-id, .hljs-string, .hljs-template-tag, .hljs-type
    color #800

  .hljs-section, .hljs-title
    color #800
    font-weight 700

  .hljs-link, .hljs-regexp, .hljs-selector-attr, .hljs-selector-pseudo, .hljs-symbol, .hljs-template-variable, .hljs-variable
    color #bc6060

  .hljs-addition, .hljs-built_in, .hljs-bullet, .hljs-code
    color #397300